
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Manager Home</title>

    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Styles/css/simple-sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div id="navbar" class="navbar navbar-expand-sm navbar-light bg-light border-bottom">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-brand">
                Logic University
            </div>

            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

                <li class="navbar-brand">
                    Hi, Manager &nbsp; <img src="~/Images/logo.jpg" class="logo" /> &nbsp;&nbsp;&nbsp;
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Logout", "Home", "StoreManager", null, new { @class = "nav-link" })
                </li>


            </ul>
        </div>
    </div>
    <div class="container-fluid" style="margin-top:30px">
        <div class="row" style="height:450px">
            <div class="col-3" style="margin-left:5%">
                <div class="card text-center" style="height:100%">
                    <img class="card-img-top" src="~/Images/Stationery.jpg" alt="Card image" style="width:100%; height:60%">
                    <div class="card-body">
                        <h3 class="card-title">Stationery Store</h3>
                        <hr/>
                        @Html.ActionLink("GO DASHBOARD", "Dashboard", "StoreManager", null, new { @class = "btn btn-primary stretched-link" })
                    </div>
                </div>
            </div>
            <div class="col-3" style="margin-left:5%">
                <div class="card text-center" style="height:100%">
                    <img class="card-img-" src="~/Images/Book2.jpg" alt="Card image" style="width:100%; height:60%">
                    <div class="card-body">
                        <h3 class="card-title">Book Store</h3>
                        <hr />
                        <a href="#" class="btn btn-primary stretched-link">GO DASHBOARD</a>
                    </div>
                </div>
            </div>
            <div class="col-3" style="margin-left:5%">
                <div class="card text-center" style="height:100%">
                    <img class="card-img-top" src="~/Images/Furniture.jpg" alt="Card image" style="width:100%; height:60%">
                    <div class="card-body">
                        <h3 class="card-title">Furniture Store</h3>
                        <hr />
                        <a href="#" class="btn btn-primary stretched-link">GO DASHBOARD</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <footer style="text-align:center; bottom: 0px; width:100%;">
        <hr />
        <p>&copy; @DateTime.Now.Year -Stationery Inventory System | NUS-ISS | SA49 | Team 8</p>
    </footer>

    <script src="~/Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>
</html>

<style>
    .logo {
        width: 36px;
        height: 36px;
        border-radius: 36px;
    }
</style>
