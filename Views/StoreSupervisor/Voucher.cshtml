@using Team8ADProjectSSIS.Models;
@{
    ViewBag.Title = "Voucher - Supervisor";
    List<StockRecord> vouchers = (List<StockRecord>)ViewData["vouchers"];
    List<float> prices = (List<float>)ViewData["prices"];
    int i = 0;
}

