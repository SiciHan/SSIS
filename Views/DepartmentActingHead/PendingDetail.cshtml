
@using Team8ADProjectSSIS.Models;
@{
    ViewBag.Title = "PendingDetail";
    Layout = "~/Views/Shared/_ActingHeadLayout.cshtml";
    Requisition r = (Requisition)ViewData["requisition"];
    List<RequisitionItem> requisitionItemList = (List<RequisitionItem>)ViewData["requisitionItemList"];

}

<h2 class="text-center">Stationery Requisition Detail</h2>
@using (Html.BeginForm("ApproveReject", "DepartmentActingHead", FormMethod.Post, new { @id = "form" }))
{
    <div class="row">
        <div class="col-md-10">
            <p>Employee Name: @r.Employee.Name</p>
            <p>Date of Request: @r.RaiseDate</p>
            @*<p>RequisitionId: @r.IdRequisition</p>*@
            <input type="hidden" name="idRequisition" value="@r.IdRequisition" />
        </div>

    </div>
    <div class="row">
        <div class="col-md-10">
            <table class="table table-hover">
                <tr>
                    <th align="center">Item Id</th>
                    <th align="center">Description</th>
                    <th align="center">Quantity</th>

                </tr>
                @foreach (RequisitionItem ri in requisitionItemList)
                {
                    <tr>
                        <td align="center">@ri.IdItem</td>
                        <td align="center">@ri.Item.Description</td>
                        <td align="center">@ri.Unit</td>

                    </tr>
                }
            </table>
            @*<h2>Approve/Reject Remarks</h2><input type="text" name="remarks" value="" />*@
            <p><b>Approve/Reject Remarks</b></p><textarea class="form-control" name="remarks"></textarea>
        </div>
    </div>

    <div class="container-fluid">
        <div class="col-md-10 col-md-offset-2">

        </div>

        <input type="submit" class="btn btn-success" name="judge" value="Approve" style="float:right; margin-right:150px;margin-top:24px" />

        <input type="submit" class="btn btn-danger" name="judge" value="Reject" style="float:right; margin-right:100px; margin-top:24px" />
    </div>
    @*<div class="row">
            <div class="col-md-10 col-md-offset-2">
                <p>Employee Name: @r.Employee.Name</p>
                <p>Date of Request: @r.RaiseDate</p>

                <input type="hidden" name="idRequisition" value="@r.IdRequisition" />
            </div>

        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-2">
                <table>
                    <tr>
                        <th align="center">Item Id</th>
