@using Team8ADProjectSSIS.Models;
@{
    ViewBag.Title = "PendingDetail";
    Layout = "~/Views/Shared/_HeadLayout.cshtml";
    Requisition r = (Requisition)ViewData["requisition"];
    List<RequisitionItem> requisitionItemList = (List<RequisitionItem>)ViewData["requisitionItemList"];

}

<h2 class="text-center">Stationery Requisition Detail</h2>


    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            <p>Employee Name: @r.Employee.Name</p>
            <p>Date of Request: @r.RaiseDate</p>

        </div>

    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            <table>
                <tr>
                    <th align="center">Item Id</th>
                    <th align="center">Description</th>
                    <th align="center">Quantity</th>

                </tr>
                @foreach (RequisitionItem ri in requisitionItemList)
                {
                    <tr>
                        <td align="center">@ri.IdItem</td>
                        <td align="center">@ri.Item.Description</td>
                        <td align="center">@ri.Unit</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    
    <div class="container-fluid">
        <div class="col-md-10 col-md-offset-2">
            <h>@Html.ActionLink("Approve", "Approve", "DepartmentHead", new { idRequisition = r.IdRequisition }, null)</h>
            <h>@Html.ActionLink("Reject", "Reject", "DepartmentHead", new { idRequisition = r.IdRequisition }, null)</h>
        </div>
        
