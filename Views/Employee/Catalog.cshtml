@using Team8ADProjectSSIS.Models
@{
    var list = ViewBag.items;
    string searchStr = (string)ViewBag.searchStr;
    var found = false;



}

<script src="~/Scripts/item.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchBox").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<link href="~/Styles/styles.css" rel="stylesheet" />

<!--<div style="margin-top:70px">-->

<div>
    <b>Search:</b>
    <input class="form-control" id="searchBox" value="@searchStr" />
    <br />
</div>

<div class="ex1">
    <table border="1" class="ex2 table">
        <tr>
            <th></th>
            <th>Description</th>
            <th>UnitOfmeasure</th>
            <th>Stock</th>
        </tr>

        @foreach (Item ite in list)
        {

            string des = ite.Description;

            int id = ite.IdCategory;

            string unit = ite.unitOfMeasure;

            int aU = ite.AvailableUnit;

            <tbody id="myTable">
                <tr>

                    <td><input type="checkbox" id="chkbox" value="@Html.Raw(id)"/>@Html.Raw(@id)</td>
                    <td><span class="shop-item-title" value="itemName">@Html.Raw(@des)</span></td>
                    <td><span class="shop-item-price" value="quantity"> @Html.Raw(@unit) </span></td>
                    <td>@Html.Raw(@aU)</td>
                </tr>


            </tbody>
        }

    </table>

</div>

<div class="add-to-request" align="right" style="margin-right:70px">
    <button onclick="addToCartClicked()" class="btn btn-primary shop-item-button">Add to request</button>
</div>

